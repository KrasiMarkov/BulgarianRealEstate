@model PropertyFormModel

@{
    ViewBag.Title = "Edit Property";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

        <h2 class="heading-margin">@ViewBag.Title</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Size"></label>
                <input asp-for="Size" class="form-control" placeholder="67 m2, 100 m2, 180 m2, etc....">
                <span asp-validation-for="Size" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor"></label>
                <input asp-for="Floor" class="form-control" placeholder="4, 7, 13, etc....">
                <span asp-validation-for="Floor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalNumberOfFloor"></label>
                <input asp-for="TotalNumberOfFloor" class="form-control" placeholder="5, 8, 10, etc....">
                <span asp-validation-for="TotalNumberOfFloor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="1956, 1982, 2000, 2019, etc....">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="67000 EUR, 95000 EUR, 140000 EUR, etc....">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictId"></label>
                <select asp-for="DistrictId" class="form-control">
                    @foreach (var district in Model.Districts)
                    {
                        <option value="@district.Id">@district.Name</option>

                    }
                </select>
                <span asp-validation-for="DistrictId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingTypeId"></label>
                <select asp-for="BuildingTypeId" class="form-control">
                    @foreach (var buildingType in Model.BuildingTypes)
                    {
                        <option value="@buildingType.Id">@buildingType.Name</option>

                    }
                </select>
                <span asp-validation-for="BuildingTypeId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyTypeId"></label>
                <select asp-for="PropertyTypeId" class="form-control">
                    @foreach (var propertyType in Model.PropertyTypes)
                    {
                        <option value="@propertyType.Id">@propertyType.Name</option>

                    }
                </select>
                <span asp-validation-for="PropertyTypeId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="This property have..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <input type="file" name="Images" multiple />
            </div>


            <div class="card mb-3">

                @{
                    var base64 = Convert.ToBase64String(Model.Images[0]);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }

                <img class="card-img-top" src="@imgSrc">

            </div>




            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}