@model PropertyDetailsServiceModel

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 40rem;">

    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.Images.Count; i++)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="@(i == 0 ? "active" : string.Empty)"></li>
        }

    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Images.Count; i++)
        {

            var base64 = Convert.ToBase64String(Model.Images[i]);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);


            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@imgSrc" alt="">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@for (int i = 0; i < Model.Images.Count; i++)
{
    var base64 = Convert.ToBase64String(Model.Images[i]);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

    <div class="card" style="width: 8rem;">
        <img class="d-block w-10" src="@imgSrc" alt="">
    </div>
}
